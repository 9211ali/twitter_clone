<div class="py-3 px-4">
  <div class="flex-shrink-0">
    <% if tweet.user.avatar.attached? %>
      <%= image_tag tweet.user&.avatar, size: '48x48', class: 'rounded-circle' %>
    <% end %>
  </div>
  <div class="flex-grow-1 ms-3">
    <% if (Time.zone.now - tweet.created_at) > 1.day %>
      <p>@<%= tweet.user.username %> - <%= tweet.created_at.strftime(' %b %d') %></p>
    <% else %>
      <p>@<%= tweet.user.username %> - <%= time_ago_in_words(tweet.created_at) %></p>
    <% end %>
    <p class='mb-0'><%= tweet.body %></p>
  </div>
</div>
